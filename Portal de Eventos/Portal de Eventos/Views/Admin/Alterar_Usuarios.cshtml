@*
    Nessa pagina vai ser possivel alterar as informações de cadastro de alum cliente escolido na pagina de listar clientes.
*@
@{
    ViewData["Title"] = "Alterar Clientes";
}


<!--A estrutura ta pronta, já pode pasar para a correção e ajustes-->

<header>
    <div id="div_Title">
        <h1 id="h_Title" class="">Alterar Cliente</h1>
    </div>
    <div id="div_Voltar">
        <a href="#">
            <!--Aqui vai ter um botão com o icone de voltar, nesse caso volta para a pagina anterior, a de listar eventos-->
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
            </svg>
        </a>
    </div>
</header>

<main>
    <!--Puxar as informações do banco de acordo com o evento escolhido-->
    <form>
        <div>
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" placeholder="Seu Nome" required />
        </div>
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" placeholder="Seu melhor Email" required />
        </div>
        <div>
            <label for="cpf">CPF:</label>
            <input type="text" id="cpf" name="cpf" placeholder="Seu CPF" required />
        </div>
        <div>
            <label for="senha">Senha:</label>
            <input type="password" id="senha" name="senha" required />
        </div>
        <div>
            <label for="confirmarSenha">Confirmação de Senha:</label>
            <input type="password" id="confirmarSenha" name="confirmarSenha" required />
        </div>
        <div>
            <button type="submit">Cadastrar</button>
        </div>
    </form>
    <!--Pop de confirmação de alteração do cliente-->
    <div id="div_PopUp">
        <div id="div_TitlePop">
            <h3 id="h_TitlePop" class="">Deseja alterar o cliente [nome do cliente]?</h3>
        </div>
        <div id="div_ButtonsPop">
            <button id="btn_CancelarPop" class="">Cancelar</button>
            <button id="btn_ConfirmarPop" class="">Confirmar</button>
        </div>
    </div>
</main>

<footer>
    <!--Footer por padrão, mas em si não é tanto necessário pra essa tela-->
    <p id="p_VersaoSistema"></p>
</footer>